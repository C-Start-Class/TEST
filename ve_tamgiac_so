#include <stdio.h>

int main()
{
    int a, n, m;
    int number = 1;
    printf("Nhap chieu cao: \n");
    scanf("%d", &a);
    n = a; //So ky tu trong 1 dong
    m = 1; //So ky tu khoang trang trong 1 dong
    for (int i = 1; i <= a; i++) {
        for (int j = 1; j < n; j++) {
            printf(" ");
        }
        for (int k = 0; k <m; k++){
            if(number+k<=m){
                printf("%d",number+k);
            }
            else if(number+k>m){
                printf("%d",number+m-k-1);
            }
        }
        n--;
        m+=2;
        number++;
        printf("\n");
    }
    return 0;
}
